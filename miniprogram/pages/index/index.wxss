/* pages/index1/index1.wxss */
.banner_ul{
    position: relative;
    width: 100%;
    height: 400rpx;
    overflow: hidden;
}
.banner_ul .banner_li{
    position: absolute;
    width: 80%;
    height: 80%;
    left: -40%;
}
.banner_ul .banner_li.pitch{
    width: 90%;
    left: 5%;
    height: 90%;
    opacity: 1.3;
}
.banner_ul .banner_li.right{
    left: 60%;
}
.banner_ul .banner_li image{
    width: 100%;
    height: 100%;
}

.message{
    margin: 30rpx 0;
    font-size: 36rpx;
    line-height: 80rpx;
    width: 100%;
    box-sizing: border-box
}
.message .message_h1{
    padding: 0 30rpx;
    line-height: 80rpx;
    margin: 10rpx 0;
    color: #000;
    border-bottom: 4rpx solid #eee;
    border-left: 10rpx solid #007acc;
    box-sizing: border-box
}
.message .message_ul{
    width: 100%;
    display: flex;
    padding: 0 40rpx;
    justify-content: space-between;
    flex-wrap: wrap;
    box-sizing: border-box
}
.message .message_ul::after{
    /* content: "正在努力中···"; */
    flex: 999999;
    text-align: center
}
.message .message_li{
    height: 280rpx;
    width: calc(50% - 20rpx);
    text-align: center;
    color: #666
}
.message .message_li .h2{
    display: block;
    line-height: 80rpx;
}
.message .message_li .strive{
    line-height: 200rpx;
    color: #ccc;
    display: block;
    width: 100%
}
.message .message_li navigator,
.message .message_li image{
    width: 100%;
    height: 200rpx;
}
.message .message_li image{
    vertical-align: middle
}