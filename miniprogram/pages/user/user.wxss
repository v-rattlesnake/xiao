/* pages/user/user.wxss */
.header{
    height: 200rpx;
    width: 100%;
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 20rpx 20rpx;
}
.header .header_img{
    width: 160rpx;
    height: 160rpx;
}
.header .header_img image{
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
    background: #000
}
.header .header_text{
    width: calc(100% - 200rpx);
    line-height: 70rpx;
}
.header .header_text .header_name{
    margin-top: 20rpx;
    font-size: 40rpx
}
.list_ul{
    width: 100%;
    background: #ddd;
    padding: 20rpx 0 0;
}
.list_ul .list_li navigator{
    width: 100%;
}
.list_ul .list_li{
    width: 100%;
    padding: 0 20rpx;
    box-sizing: border-box;
    line-height: 80rpx;
    background: #fff;
    margin-bottom: 2rpx;
}
.list_ul .list_li:last-of-type{
    margin-top: 20rpx
}
.list_ul .list_li navigator{
    width: 100%;
    display: flex;
    justify-content: space-between
}
.list_ul .list_li image{
    width: 30rpx;
    height: 30rpx;
    position: relative;
    top:25rpx;
}