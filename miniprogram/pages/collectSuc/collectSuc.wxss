
.content .null{
    padding-top: 160rpx;
    text-align: center;
    color: #999
}
.content .null image{
    width: 80vw
}


.content swiper-item view{
    width: 80vw;
    margin: 140rpx auto 0;
    overflow-y: scroll
}
.content .content_text{
    position: absolute;
    top: 30rpx;
    right: 10vw;
    font-size: 30rpx;
    line-height: 40rpx;
    margin: 20rpx 0;
}
.content .you{
    position: relative;
    display: flex;
    justify-content: space-between;
}
.content .list{
    height: 100vh;
    position: relative;
}
.content .list::after{
    content: "收藏列表";
    display: block;
    position: absolute;
    line-height: 56rpx;
    padding: 0 13rpx 0 10rpx;
    transform: translateX(100%);
    border-radius: 0 28rpx 28rpx 0;
    background: #54b4f5;
    top: 55rpx;
    right: 0;
    color: #fff;
    width: 140rpx
}
.content .list .list_ul{
    background: #54b4f5;
    width:100%;
    height: 100%;
    overflow-y: scroll
}
.content .list .list_li{
    line-height: 40rpx;
    margin: 20rpx 0;
    padding: 0 10rpx;
    font-size: 28rpx
}
.content .swiper{
    flex: 1
}